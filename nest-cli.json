{
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".schema.ts", ".interface.ts", ".dto.ts"],
          "introspectComments": true
        }
      }
    ]
  },
  "sourceRoot": "src"
}
